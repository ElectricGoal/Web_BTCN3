<div class="mt-3">
    <div class="row">
        <div class="col">
            <h3>Movie detail</h3>
        </div>
        <div class="col">
            {{#if isAdded}}
            <button class="btn btn-primary float-end" disabled>Added to favorite</button>
            {{else}}
            {{!-- <button class="btn btn-primary float-end" disabled>Added to favorite</button> --}}
            <form action="/home/movie/{{ id }}" method="post">
                <button class="btn btn-primary float-end" type="submit">Add to favorite</button>
            </form>
            {{/if}}
        </div>
    </div>
</div>

<div class="mt-3">
    {{#with movie}}
    <div class="row">
        <div class="col-4">
            <img src={{ Image }} class="card-img-top" alt="...">
        </div>
        <div class="col">
            <h3>Name: {{ Title }}</h3>
            <div>Rating: {{ Rating }}</div>
            <div>Rating count: {{ RatingCount }}</div>
            <div>Ranking: {{ TopRank }}</div>
            <div>Genres: {{ Genres }}</div>
            <div>Year: {{ Year }}</div>
        </div>
    </div>
    <br>
    <a href="/home/movie/{{ ID }}/review">
        <h5>Review</h5>
    </a>
    <br>
    <h5>Description: </h5>
    <p><small>{{ Description }}</small></p>
    {{/with}}
    <br>
    <br>
    <h5>Casts:</h5>
    {{#each casts}}
    <a href="/home/actor/{{ ID }}" class="card mb-3 text-dark" style="max-width: 540px; text-decoration: none">
        <div class="row g-0">
            <div class="col-md">
                <img src={{ Image }} class="img-fluid rounded-start" alt={{ ID }} width="100" height="100">
            </div>
            <div class="col-md-10">
                <div class="card-body">
                    <h5 class="card-title">{{ Name }}</h5>
                    <p class="card-text">{{ CharacterName }}</p>
                </div>
            </div>
        </div>
    </a>
    {{/each}}
</div>
{{> footer}}