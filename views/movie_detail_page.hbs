<div class="mt-3">
    <div class="row">
        <div class="col">
            <h3>Movie detail</h3>
        </div>
        <div class="col">
            <form action="/home/movie/{{ ID }}" method="post">
                <button class="btn btn-primary float-end" type="submit">Add to favorite</button>
            </form>
        </div>
    </div>
    
    {{!-- <a href="/persons/{{ id }}/delete"><button class="btn btn-outline-danger" type="button">Delete</button></a>
    --}}
