    <div class="row">
        <div class="col-4">
            <img src={{ Image }} class="card-img-top" alt="...">
        </div>
        <div class="col">
            <h3>Name: {{ Title }}</h3>
            <div>Rating: {{ Rating }}</div>
            <div>Rating count: {{ RatingCount }}</div>
            <div>Ranking: {{ TopRank }}</div>
